# =============================================================================
# v0 Strategy Engine Pro - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection URL (SQLAlchemy format)
DATABASE_URL=sqlite:///./trading_engine.db
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
# For MySQL: mysql+pymysql://user:password@localhost:3306/dbname

# Database encryption key (32-byte base64-encoded string)
# Generate with: python -c "import os, base64; print(base64.b64encode(os.urandom(32)).decode())"
DB_ENCRYPTION_KEY=your_32_byte_base64_encoded_encryption_key_here

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Get your chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=987654321

# Webhook configuration (optional - for production deployment)
# Set to 'true' to use webhook mode instead of polling
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram/webhook
TELEGRAM_WEBHOOK_PORT=8443

# Alert settings (optional)
TELEGRAM_CONFIRMATION_TIMEOUT=60
TELEGRAM_ALERT_COOLDOWN=5
TELEGRAM_MAX_PENDING=5

# =============================================================================
# REDIS CACHING (Optional - for advanced caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_PASSPHRASE=

# Bitget
BITGET_API_KEY=your_bitget_api_key
BITGET_API_SECRET=your_bitget_api_secret
BITGET_PASSPHRASE=your_bitget_passphrase

# Bybit
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret

# Gate.io
GATEIO_API_KEY=your_gateio_api_key
GATEIO_API_SECRET=your_gateio_api_secret

# Huobi/HTX
HUOBI_API_KEY=your_huobi_api_key
HUOBI_API_SECRET=your_huobi_api_secret

# Kraken
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_API_SECRET=your_kraken_api_secret

# KuCoin
KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_API_SECRET=your_kucoin_api_secret
KUCOIN_PASSPHRASE=your_kucoin_passphrase

# MEXC
MEXC_API_KEY=your_mexc_api_key
MEXC_API_SECRET=your_mexc_api_secret

# OKX
OKX_API_KEY=your_okx_api_key
OKX_API_SECRET=your_okx_api_secret
OKX_PASSPHRASE=your_okx_passphrase

# Phemex
PHEMEX_API_KEY=your_phemex_api_key
PHEMEX_API_SECRET=your_phemex_api_secretI_SECRET=your_kraken_api_secret

# =============================================================================
# AI MODEL API KEYS
# =============================================================================
# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-your_openai_api_key

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Google AI (Gemini)
GOOGLE_API_KEY=your_google_ai_api_key

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading mode: 'manual', 'semi_auto', 'auto', 'paper_trading' (default: manual)
TRADING_MODE=manual

# Paper trading mode configuration (when TRADING_MODE=paper_trading)
# Enables risk-free testing of strategies with simulated trades
ENABLE_PAPER_TRADING=false
PAPER_TRADING_INITIAL_BALANCE=10000  # Starting balance for paper trading (USD)

# Default trade size (USD)
DEFAULT_TRADE_SIZE=100

# Risk management
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=500
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=5.0

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=./logs/trading_engine.log

# Enable structured logging
ENABLE_STRUCTURED_LOGS=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application environment: development, staging, production
APP_ENV=development

# Secret key for session management (generate random string)
SECRET_KEY=your_secret_key_for_session_management

# API server configuration (for FastAPI dashboard)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# =============================================================================
# DATA PIPELINE CONFIGURATION
# =============================================================================
# Backfill settings
BACKFILL_ENABLED=true
BACKFILL_START_DATE=2024-01-01
BACKFILL_BATCH_SIZE=1000

# Real-time data refresh interval (seconds)
DATA_REFRESH_INTERVAL=60

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT token settings (for API authentication)
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Password hashing rounds (bcrypt)
BCRYPT_ROUNDS=12

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Webhook URLs for external notifications
WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
SMTP_FROM=noreply@yourproject.com

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Enable performance profiling
ENABLE_PROFILING=false

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Enable debug mode (DO NOT use in production)
DEBUG=false

# Test mode (uses test database)
TEST_MODE=false

# Mock exchange API calls (for testing without real API)
MOCK_EXCHANGE_API=false
